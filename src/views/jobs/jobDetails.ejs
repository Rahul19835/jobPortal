<div class="jobDetailWrap">
    <h1><%= job.jobTitle %></h1>
    <div class="jobDetailBox">
        <div class="jobLeft">
            <div class="job-head">
                <div class="company-logo">
                    <img src="/file_upload/<%= job.img %>" alt="" />
                </div>
                <div class="company-detail">
                    <div class="company-name"><%= job.companyName %></div>
                    <div class="company-loc"><%= job.companyLocation %></div>
                </div>
            </div>
            <div class="job-body">
                <h2>Description</h2>
                <p><%= job.jobDesc %></p>
                <!-- Action Btn -->
                <div class="actionBtn">
                    <% if(locals.user){ %>
                        <% if(job.applicants.length != 0) { %>
                            <a href="/jobs/<%= job.id %>/applicants">Applicants <%= job.applicants.length != 0 ? job.applicants.length : 0%></a>
                        <% } %>
                        <a href="/jobs/<%= job.id %>/edit">Edit Job</a>
                        <form action="/jobs/<%= job.id %>/delete" method="POST">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this job?');">Delete Job</button>
                        </form>
                    <% } else { %>
                        <a href="javaScript:void(0);" id="applyBtn">Apply Now</a>
                    <% } %>
                   
                   
                </div>
            </div>
        </div>
        <div class="jobRight">
            <div class="title">Job Information</div>
            <div class="otherDetail">
                <ul>
                    <li>
                        <div>Employee Type</div>
                        <span><%= job.jobType %></span>
                    </li>
                    <li>
                        <div>Experience</div>
                        <span><%= job.experience %></span>
                    </li>
                    <li>
                        <div>Qualifications</div>
                        <span><%= job.qualifications %></span>
                    </li>
                    <li>
                        <div>Salary</div>
                        <span>$<%= job.JobPrice %></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Apply Form -->
<div class="custom-model-main" id="applyModel">
    <div class="custom-model-inner">        
    <div class="close-btn">Ã—</div>
        <div class="custom-model-wrap">
            <div class="pop-up-content-wrap">
               <h2>Apply for this Job</h2>
               <form action="/jobs/<%= job.id %>/apply" method="POST" enctype="multipart/form-data">
                 <div class="form-group">
                   <label for="name">Name</label>
                   <input type="text" class="form-control" id="name" name="name" required>
                 </div>
                 <div class="form-group">
                   <label for="email">Email</label>
                   <input type="email" class="form-control" id="email" name="email" required>
                 </div>
                 <div class="form-group">
                    <label for="email">Contact No</label>
                    <input type="phone" class="form-control" id="phone" name="phone" required>
                  </div>
                 <div class="form-group">
                   <label for="resume">Resume</label>
                   <input type="file" class="form-control-file" id="resume" name="resume" required accept=".pdf">
                 </div>
                 <button type="submit" class="site-btn">Apply</button>
               </form>
            </div>
        </div>  
    </div>  
    <div class="bg-overlay"></div>
</div> 